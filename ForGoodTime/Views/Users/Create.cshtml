@model Model.Models.CreateUserViewModel
@{
    ViewBag.Title = "Create User";
}

<div class="container box_1170 border-top-generic">
    <div class="section padding_top">
        <div class="row">
            <div class="col-lg-8">
                <form asp-action="Create" asp-controller="Users">
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="col-md-8 form-group">
                        <label asp-for="Email" class="control-label">Email</label>
                        <input type="text" asp-for="Email" class="form-control" />

                    </div>
                    <div class="col-md-8 form-group">
                        <label asp-for="FirstName"></label>
                        <input asp-for="FirstName" class="form-control" />
                        <span asp-validation-for="FirstName" class="text-danger"></span>
                    </div>
                    <div class="col-md-8 form-group">
                        <label asp-for="LastName"></label>
                        <input asp-for="LastName" class="form-control" />
                        <span asp-validation-for="LastName" class="text-danger"></span>
                    </div>
                    <div class="col-md-8 form-group">
                        <label asp-for="PhoneNumber"></label>
                        <input asp-for="PhoneNumber" class="form-control" />
                        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                    </div>
                    <div class="col-md-8 form-group">
                        <label asp-for="Address"></label>
                        <input asp-for="Address" class="form-control" />
                        <span asp-validation-for="Address" class="text-danger"></span>
                    </div>
                    <div class="col-md-8 form-group">
                        <label asp-for="Password" class="control-label">Password</label>
                        <input type="text" asp-for="Password" class="form-control" />
                    </div>
                    <div class="col-md-8 form-group">
                        <input type="submit" value="Create" class="btn_3 button-contactForm" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @await Html.PartialAsync("_ValidationScriptsPartial")
}